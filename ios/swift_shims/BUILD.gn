import("//build/config/apple/swift_source_set.gni")

if (enable_swift_cxx_interop) {
  source_set("_shims") {
    sources = [
      "sys_info.cc",
      "sys_info.h",
      "time.cc",
      "time.h",
      "user_metrics.cc",
      "user_metrics.h",
    ]
    deps = [ "//base" ]
    visibility = [ ":*" ]
  }

  swift_cxx_import("sys_info") {
    sources = [ "sys_info.h" ]
    public_deps = [ ":_shims" ]
  }

  swift_cxx_import("time") {
    sources = [ "time.h" ]
    public_deps = [ ":_shims" ]
  }

  swift_cxx_import("user_metrics") {
    sources = [ "user_metrics.h" ]
    public_deps = [ ":_shims" ]
  }
}
